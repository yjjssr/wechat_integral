<view class="container">
  <view class='my-tabbar'>
    <view class='tabbar-item {{active_index==0 && "tabbar-active"}}' data-active_index="0" bindtap='change_active_index'>积分获取</view>
    <view class='tabbar-item {{active_index==1 && "tabbar-active"}}' data-active_index="1" bindtap='change_active_index'>积分详情</view>
  </view>
  <view wx:if="{{active_index==0}}" class='my_body'>
    <form bindsubmit="formSubmit" class='my_form'>
      <view class="form_section">
        <input name="transation_code" class='transation_code' placeholder="请输入订单号" />
      </view>
      <view class="btn-area">
        <button type="primary" formType="submit">获取积分</button>
      </view>
    </form>
  </view>
  <view wx:else>
  <button type="primary" formType="submit">签到</button>
  </view>
